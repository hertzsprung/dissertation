#!/bin/bash -e
#

if [ "$#" -ne 2 ]
then
   echo usage: pstitle newTitle postScriptFile
   exit
fi

tit=$1
file=$2

ln=`grep -n Title $file | head -1 | cut -d: -f1`
let ln0=$ln+0
if [ $ln != $ln0 ]; then
    exit 0
fi

let ln=$ln-1
head -$ln $file > .tmp.pstitle
echo %%Title: $tit >> .tmp.pstitle

nl=`cat $file | wc -l`
let nl="${nl}-${ln}"-1

tail -$nl $file >> .tmp.pstitle

\mv .tmp.pstitle $file
