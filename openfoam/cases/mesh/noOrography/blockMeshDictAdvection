FoamFile {
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

convertToMeters 1000; // effective units are km

// effectively 2D in x-z plane, 300x25km
vertices (
    (-150 0 0)  // 0
    (150  0 0)  // 1
    (150  1 0)  // 2
    (-150 1 0)  // 3
    (-150 0 25) // 4
    (150  0 25) // 5
    (150  1 25) // 6
    (-150 1 25) // 7
);

blocks (
	hex (0 1 2 3 4 5 6 7)
	    (300 1 50)
	    simpleGrading (1 1 1)
);

boundary (
	inlet {
		type patch;
		faces (
			(0 3 7 4)
		);
	}

	outlet {
		type wall;
		faces (
			(1 2 6 5)
		);
	}

	ground {
		type wall;
		faces (
			(0 1 2 3)
		);	
	}

	top {
		type wall;
		faces (
			(4 5 6 7)
		);
	}

	frontAndBack {
		type empty;
		faces (
			(0 1 5 4)
			(3 2 6 7)
		);
	}
);
