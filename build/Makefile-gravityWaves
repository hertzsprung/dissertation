GRAVITY_WAVES_END_TIME := 18000
SPONGE_LAYER := constant/muSponge
GMT_DICTS := constant/gmtDicts
FINAL_W_CONTOURS := $(GRAVITY_WAVES_END_TIME)/w.eps
FINAL_THETA_DIFF_FIELD := $(GRAVITY_WAVES_END_TIME)/thetaDiff
FINAL_THETA_DIFF_PLOT := $(GRAVITY_WAVES_END_TIME)/thetaDiff.eps
W_CONTOURS_DICT := $(GMT_DICTS)/w
THETA_DIFF_DICT := $(GMT_DICTS)/thetaDiff

# $(1) -- simulation case path
# $(2) -- subproject label
# $(3) -- mesh case path
define GRAVITY_WAVES_TEMPLATE

  $(eval $(call $(PHYSICAL_TEST_CASE_TEMPLATE),$(1),$(2),$(3),$(GRAVITY_WAVES_END_TIME),$(EXNER_FOAM_H),$(SET_EXNER_BALANCED_H)))

  .PHONY: $(2) clean-$(2)

  all:: $(2)

  clean:: clean-$(2)

  $(2): $(1)/$(FINAL_W_CONTOURS) $(1)/$(FINAL_THETA_DIFF_PLOT)

  clean-$(2):
	$(RM) -r $(1)

  $(2).exnerFoam.intermediate: $(1)/$(SPONGE_LAYER)

  $(1)/$(SPONGE_LAYER): \
    $(1)/$(ENVIRONMENTAL_PROPERTIES) \
    $(1)/$(POLY_MESH_DIR) \
    $(addprefix $(3)/,$(MESH_FILES)) \
    $(addprefix $(1)/,$(SYSTEM_FILES))
	$(CREATE_SPONGE_LAYER) -case $(1) > $(2).createSpongeLayer.log

  $(1)/$(FINAL_W_CONTOURS): \
    $(addprefix $(1)/$(GRAVITY_WAVES_END_TIME)/,$(FINAL_PHYSICAL_FIELDS)) \
    $(1)/$(W_CONTOURS_DICT)
	$(PLOT_PATCH_DATA) -case $(1) -time $(GRAVITY_WAVES_END_TIME) w > $(2).plotPatchData.w.log

  $(1)/$(W_CONTOURS_DICT): $(COMMON_CASE)/$(W_CONTOURS_DICT) | $(1)/$(GMT_DICTS)
	$(LN) -fs $(COMMON_CASE)/$(W_CONTOURS_DICT) $$@

  $(1)/$(FINAL_THETA_DIFF_PLOT): \
    $(1)/$(THETA_DIFF_DICT) \
    $(1)/$(FINAL_THETA_DIFF_FIELD)
	$(PLOT_PATCH_DATA) -case $(1) -time $(GRAVITY_WAVES_END_TIME) thetaDiff > $(2).plotPatchData.thetaDiff.log

  $(1)/$(FINAL_THETA_DIFF_FIELD): \
    $(addprefix $(1)/$(GRAVITY_WAVES_END_TIME)/,$(FINAL_PHYSICAL_FIELDS))
	$(SUM_FIELDS) -case $(1) $(GRAVITY_WAVES_END_TIME) thetaDiff $(GRAVITY_WAVES_END_TIME) theta 0 theta -scale0 1 -scale1 -1 > $(2).sumFields.thetaDiff.log

  $(1)/$(THETA_DIFF_DICT): $(COMMON_CASE)/$(THETA_DIFF_DICT) | $(1)/$(GMT_DICTS)
	$(LN) -fs $(COMMON_CASE)/$(THETA_DIFF_DICT) $$@

  $(1)/$(CONTROL_DICT):
	$(LN) -fs $(COMMON_CASE)/$(CONTROL_DICT).gravityWaves $$@

  $(1)/$(FV_SCHEMES):
	$(LN) -fs $(COMMON_CASE)/$(FV_SCHEMES).gravityWaves $$@

  $(1)/$(FV_SOLUTION):
	$(LN) -fs $(COMMON_CASE)/$(FV_SOLUTION).gravityWaves $$@

  $(1)/$(THETA_INIT): $(COMMON_CASE)/$(THETA_INIT).gravityWaves
	$(CP) $(COMMON_CASE)/$(THETA_INIT).gravityWaves $$@

  $(1)/$(EXNER_INIT): $(COMMON_CASE)/$(EXNER_INIT).gravityWaves
	$(CP) $(COMMON_CASE)/$(EXNER_INIT).gravityWaves $$@

  $(1)/$(INITIAL_UF_FIELD):
	$(LN) -fs $(COMMON_CASE)/$(INITIAL_UF_FIELD).gravityWaves $$@

  $(1)/$(ENVIRONMENTAL_PROPERTIES):
	$(LN) -fs $(COMMON_CASE)/$(ENVIRONMENTAL_PROPERTIES).gravityWaves $$@

  $(1)/$(THERMOPHYSICAL_PROPERTIES):
	$(LN) -fs $(COMMON_CASE)/$(THERMOPHYSICAL_PROPERTIES) $$@

  $(1)/$(GMT_DICTS):
	$(MKDIR) -p $$@

endef

$(eval $(call GRAVITY_WAVES_TEMPLATE,openfoam/cases/gravityWaves/btf/schaerExp,gravityWaves-btf-schaerExp,openfoam/cases/mesh/btf/schaerExp/gravityWaves))
$(eval $(call GRAVITY_WAVES_TEMPLATE,openfoam/cases/gravityWaves/snap/schaerExp,gravityWaves-snap-schaerExp,openfoam/cases/mesh/snap/schaerExp/gravityWaves))
