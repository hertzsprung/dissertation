# $(1) -- snap mesh case path
# $(2) -- subproject label (e.g. mesh-btf-schaerCos)
# $(3) -- terrain following mesh case path
# $(4) -- no orography mesh case path (e.g. mesh-noOrography)
# $(5) -- snappyHexMeshDict path
define SNAP_COL_MESH_TEMPLATE

  $(eval $(call SNAPPY_HEX_MESH_TEMPLATE,$(1),$(2),$(3),$(4),$(5)))

  $(2).intermediate.blockMesh: $(addprefix $(4)/,$(MESH_FILES)) | $(1)/$(POLY_MESH_DIR)
	$(CP) $(addprefix $(4)/,$(MESH_FILES)) $(1)/$(POLY_MESH_DIR) 

endef

$(eval $(call SNAP_COL_MESH_TEMPLATE,openfoam/cases/mesh/snapCol/schaerCos/advection,mesh-snapCol-schaerCos-advection,openfoam/cases/mesh/btf/schaerCos/advection,openfoam/cases/mesh/snapCol-2dMountain/schaerCos/advection,openfoam/cases/mesh/snap/snappyHexMeshDict))
$(eval $(call SNAP_COL_MESH_TEMPLATE,openfoam/cases/mesh/snapCol/schaerExp/resting,mesh-snapCol-schaerExp-resting,openfoam/cases/mesh/btf/schaerExp/resting,openfoam/cases/mesh/snapCol-2dMountain/schaerExp/resting,openfoam/cases/mesh/snap/snappyHexMeshDict))
$(eval $(call SNAP_COL_MESH_TEMPLATE,openfoam/cases/mesh/snapCol/schaerExp/gravityWaves,mesh-snapCol-schaerExp-gravityWaves,openfoam/cases/mesh/btf/schaerExp/gravityWaves,openfoam/cases/mesh/snapCol-2dMountain/schaerExp/gravityWaves,openfoam/cases/mesh/snap/snappyHexMeshDict))

$(eval $(call SNAP_COL_MESH_TEMPLATE,openfoam/cases/mesh/snapOrtho/schaerExp/gravityWaves,mesh-snapOrtho-schaerExp-gravityWaves,openfoam/cases/mesh/btf/schaerExp/gravityWaves,openfoam/cases/mesh/snapOrtho-2dMountain/schaerExp/gravityWaves,openfoam/cases/mesh/snap/snappyHexMeshDict))
