POLY_MESH_DIR := constant/polyMesh

MESH_FILES := \
  $(POLY_MESH_DIR)/boundary \
  $(POLY_MESH_DIR)/faces \
  $(POLY_MESH_DIR)/neighbour \
  $(POLY_MESH_DIR)/owner \
  $(POLY_MESH_DIR)/points

# $(1) -- mesh case path
# $(2) -- subproject label (e.g. advection_noOrography)
define MESH_TEMPLATE

  .PHONY: $(2) clean-$(2)

  $(2): $(addprefix $(1)/,$(MESH_FILES))

  clean-$(2):
	$(RM) $(addprefix $(1)/,$(MESH_FILES))

endef
