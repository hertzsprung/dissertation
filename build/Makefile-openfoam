export COMMON_CASE := $(abspath openfoam/cases/common)

CONTROL_DICT := system/controlDict
FV_SCHEMES := system/fvSchemes
FV_SOLUTION := system/fvSolution

SYSTEM_FILES := \
  $(CONTROL_DICT) \
  $(FV_SCHEMES) \
  $(FV_SOLUTION)

# $(1) -- case path
define CASE_TEMPLATE
  $(1)/system:
	$(MKDIR) -p $(1)/system

  $(addprefix $(1)/,$(SYSTEM_FILES)): | $(1)/system
endef
