mesh_noOrography_CASE := openfoam/cases/mesh/noOrography

BLOCK_MESH_DICT := constant/polyMesh/blockMeshDict

mesh_noOrography_MESH_FILES := \
  constant/polyMesh/boundary \
  constant/polyMesh/faces \
  constant/polyMesh/neighbour \
  constant/polyMesh/owner \
  constant/polyMesh/points

mesh_noOrography_MESH_PATHS := $(addprefix $(mesh_noOrography_CASE)/,$(mesh_noOrography_MESH_FILES))

BLOCK_MESH := blockMesh

.PHONY: mesh-noOrography clean-mesh-noOrography
.INTERMEDIATE: mesh-noOrography.intermediate

mesh-noOrography: $(mesh_noOrography_MESH_PATHS)

clean-mesh-noOrography:
	$(RM) $(mesh_noOrography_MESH_PATHS)

$(mesh_noOrography_MESH_PATHS): mesh-noOrography.intermediate

mesh-noOrography.intermediate: $(mesh_noOrography_CASE)/$(BLOCK_MESH_DICT) 
	$(BLOCK_MESH) -dict $(BLOCK_MESH_DICT) -case $(mesh_noOrography_CASE)

