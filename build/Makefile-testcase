# $(1) -- case path
# $(2) -- unused
# $(3) -- mesh path
define TEST_CASE_TEMPLATE

  $(eval $(call CASE_TEMPLATE,$(1)))

  $(1)/$(POLY_MESH_DIR): $(3)/$(POLY_MESH_DIR)
	$(LN) -fs $(abspath $(3)/$(POLY_MESH_DIR)) $(1)/$(POLY_MESH_DIR)

  $(1)/$(DECOMPOSE_PAR_DICT): $(COMMON_CASE)/$(DECOMPOSE_PAR_DICT)
	$(LN) -fs $$< $$@

endef
